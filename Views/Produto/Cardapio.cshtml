@using Bar.Models
@model List<Produto>
@{
  ViewBag.Title = "Painel de Controle";

  int[] terms = new int[20];
  List<dynamic> termsList = new List<dynamic>();
}


<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  header {
    background: #28282d;
    color: white;
  }

  body {
    background: #303038;
  }

  footer {
    background: #28282d;
  }

  .container2 {
    width: min(90vw, 800px);
    margin: auto;
  }

  .menu {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    justify-content: center;
    grid-gap: 1rem;
  }

  .product {
    background: #28282d;
    color: white;
    padding: 1rem 1rem;
    width: 100%;
    height: 300px;
    border-radius: 0.25rem;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: space-between;

    margin-bottom: 1rem;
  }

  .product img {
    width: 100%;
    height: 130px;
  }

  .div-qtd {
    display: flex;
    align-items: center;
    height: 50px;
  }

  .input-qtd {
    width: 30%;
    border: 0px;
    border-radius: 0.25rem;
    outline: none;
  }
</style>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <main class="container2">
    <section class="menu">
      <!--FAZER O ADICIONAR PRODUTO IGUAL AO TODO, USANDO A SESSÃO DE REPOSITORY-->
      @foreach (var produto in Model)
      {
        <div class="product">
          <img src="~/lib/img/wallpaper.jpg" alt="">
          <h6>@produto.Descricao</h6>
          <h2>R$ @produto.Valor</h2>
          <button id="btnAdd" onclick="AdicionarProduto('@produto.Descricao', '@produto.Valor')"
          class="btn btn-secondary btn-sm">Adicionar no carrinho</button>
          <!--<a href="/produto/adicionar/@produto.Descricao" class="btn btn-sm btn-primary">Editar</a>-->
      </div>
      }
    </section>

    <table id="tabela" class="table table-hover">
      <thead>
        <tr>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Quantidade</th>
        </tr>
      </thead>
      <tbody id="tbody"></tbody>
    </table>

    <!--
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Descrição</th>
          <th scope="col">Valor</th>
          <th scope="col">Quantidade</th>
        </tr>
      </thead>
      <tbody id="tbody">
        <tr>
          <td></td>
          <td></td>
          <td><input type="number" style="width: 50px;"></td>
        </tr>
      </tbody>
    </table>-->

  </main>
  <footer></footer>


</body>

</html>
