@using Bar.Models
@model Bar.Models.Produto
<link rel="stylesheet" href="~/css/cardapio.css" />
@{
  ViewBag.Title = "Painel de Controle";
}

<div class="container">
  <section class="menu">
    <!--FAZER O ADICIONAR PRODUTO IGUAL AO TODO, USANDO A SESSÃO DE REPOSITORY-->
    @foreach (var produto in @ViewBag.produtos)
    {
      <div class="product">
        <img src="~/lib/img/wallpaper.jpg" alt="">
        <h6>@produto.Descricao</h6>
        <h2>R$ @produto.Valor</h2>

        <a href="/produto/selecionarProduto/@produto.IdProduto" class="btn btn-sm btn-primary">Selecionar produto</a>
      </div>
    }
  </section>
  <br />

  @if (@ViewBag.testeFinal != null && @ViewBag.testeFinal.Count != 0)
  {
    <table class="table" style="background: #28282d; color: white; padding: 100px;">
      <thead>
        <tr>
          <th>Descricao</th>
          <th>Valor</th>
          <th>Quantidade</th>
          <th>&nbsp</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in @ViewBag.testeFinal)
        {
          <tr>
            <td>@item.Descricao</td>
            <td>R$ @item.Valor</td>
            <td>@item.Quantidade</td>
            <td>
              <a class="glyphicon glyphicon-plus" style="color: green" aria-hidden="true"
            href="/produto/incrementoQtd/@item.IdProduto"></a>
              &nbsp&nbsp&nbsp
              <a class="glyphicon glyphicon-minus" style="color: red" aria-hidden="true"
            href="/produto/decrementoQtd/@item.IdProduto"></a>
            </td>
          </tr>
        }
      </tbody>
    </table>

    <a href="/produto/pedido" class="btn btn-sm btn-primary">Ir para o Carrinho</a>
  }
</div>

