@using Bar.Models
<link rel="stylesheet" href="~/css/cardapio.css" />
@{
  ViewBag.Title = "Painel de Controle";
}

</style>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

  <main class="container">
    <section class="menu">
      @foreach (var mesa in Model)
      {
        <div class="product">
          <img src="~/lib/img/wallpaper.jpg" alt="">
          <h6>@mesa.Descricao</h6>
          <h2>R$ @mesa.Valor</h2>
          <button class="btn btn-secondary btn-sm">Adicionar no carrinho</button>
        </div>
      }
    </section>
  </main>
  <footer></footer>
</body>

</html>
